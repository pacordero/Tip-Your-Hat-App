<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.patrickcordero.tipyourhat.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Bill Total:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip %:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/tip_input"
        android:layout_alignBottom="@+id/tip_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tip_input"
        android:layout_marginTop="20dp"
        android:text="Tip Total:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:text="Grand Total:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="74dp"
        android:text="Split Total:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Split Bill:"
        android:textColor="@color/textLightBack"
        android:textSize="22sp"
        android:layout_above="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/calculate_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="15sp"
        android:layout_below="@+id/fifteen_button"
        android:layout_toRightOf="@+id/fifteen_button"
        android:layout_toEndOf="@+id/fifteen_button" />

    <EditText
        android:id="@+id/total_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignLeft="@+id/tip_input"
        android:layout_alignStart="@+id/tip_input" />

    <EditText
        android:id="@+id/tip_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_below="@+id/total_input"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/tip_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/tip_input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/tip_input"
        android:clickable="false"
        android:contextClickable="false"
        android:hint="0.00"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/total_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tip_input"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tip_input"
        android:text="$"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/split_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:text="$ 0.00"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="22sp" />

    <Button
        android:id="@+id/add_people_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_add_wcircle"
        android:textAlignment="textEnd"
        android:textColor="@color/actionBar"
        android:layout_toRightOf="@+id/calculate_Button"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignBottom="@+id/sub_people_button" />

    <Button
        android:id="@+id/sub_people_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_remove_circle"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:layout_alignBaseline="@+id/split_number"
        android:layout_alignBottom="@+id/split_number"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/split_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/sub_people_button"
        android:layout_alignStart="@+id/sub_people_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/total_display"
        android:layout_alignBottom="@+id/total_display"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="22sp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/fifteen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15% Tip"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <Button
        android:id="@+id/twenty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20% Tip"
        android:layout_alignBaseline="@+id/fifteen_button"
        android:layout_alignBottom="@+id/fifteen_button"
        android:layout_toRightOf="@+id/calculate_Button"
        android:layout_toEndOf="@+id/calculate_Button" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignTop="@+id/tip_display"
        android:text="$"
        android:textSize="22sp"
        android:layout_alignLeft="@+id/tip_display"
        android:layout_alignStart="@+id/tip_display" />

</RelativeLayout>
